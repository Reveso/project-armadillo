<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lukasrosz.armadillo.controller.FightSceneController">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="fightTitleLabel" />
            <ProgressBar fx:id="gameProgressBar" maxWidth="1.7976931348623157E308" progress="0" />
        </VBox>
    </top>
    <center>
        <!--<ScrollPane>-->
            <TableView fx:id="scoreboardTable" editable="true" items="${controller.scoreboardList}">
                <columns>
                    <TableColumn sortable="false" text="alias">
                        <cellValueFactory>
                            <PropertyValueFactory property="alias" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn sortable="false" text="Surname">
                        <cellValueFactory>
                            <PropertyValueFactory property="surname" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn sortable="false" text="Victories">
                        <cellValueFactory>
                            <PropertyValueFactory property="victories" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn sortable="false" text="Defeats">
                        <cellValueFactory>
                            <PropertyValueFactory property="defeats" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn sortable="false" text="Disqualifications">
                        <cellValueFactory>
                            <PropertyValueFactory property="disqualifications" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        <!--</ScrollPane>-->
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets topRightBottomLeft="10" />
            </padding>
            <Button fx:id="pauseButton" onAction="#onPauseButtonAction" prefHeight="29.0" prefWidth="112.0" text="Play" />
            <Button fx:id="backToSettingsButton" onMouseClicked="#onBackButtonMouseClicked" prefHeight="29.0" prefWidth="112.0" text="Back to settings" />
        </HBox>
    </bottom>


</BorderPane>
