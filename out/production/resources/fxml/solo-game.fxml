<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPane" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lukasrosz.armadillo.controller.SoloGameController">

    <center>
        <GridPane fx:id="boardGridPane" alignment="CENTER"/>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>

            <Button fx:id="playButton" onMouseClicked="#onPlayButtonMouseClicked" prefHeight="29.0"
                    prefWidth="112.0" text="Play"/>
            <Button fx:id="backToSettingsButton" onMouseClicked="#onBackButtonMouseClicked" prefHeight="29.0"
                    prefWidth="112.0" text="Back to settings"/>
        </HBox>
    </bottom>

</BorderPane>
